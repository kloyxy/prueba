{
  "name": "octopus_launcher",
  "version": "0.0.1",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder -p always"
  },
  "author": "Octopus Launcher",
  "license": "ISC",
  "devDependencies": {
    "electron": "^23.1.1",
    "electron-builder": "^23.6.0",
    "nodemon": "^2.0.22"
  },
  "build": {
    "appId": "Octopus Launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "kloyxy",
        "repo": "LauncherForMinecraft",
        "private": true
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "Uninstaller Octopus Launcher",
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.0.0-beta.23",
    "electron-updater": "^5.3.0",
    "fs": "^0.0.1-security",
    "minecraft-launcher-core": "^3.16.18",
    "msmc": "^4.1.0",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "uaup-js": "^0.0.22"
  }
}
